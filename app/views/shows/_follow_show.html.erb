<div id="follow_show-<%= show.id %>" class="follow-show">
<% if current_user.nil? %>
    <a class="pop-button disabled" data-toggle="modal" href="#becomeMember"><div class="plus"></div></a>
<% else %>

  <% if current_user.following?(show) %>
    <%= link_to(unfollow_show_path(show), 
        :remote => true, 
        :class => 'pop-button followed', 
        :data => {:toggle=>"popover", :trigger => 'hover', :placement => 'left', :html => true,  :content => "Click to stop following <b>'#{show.title}!'</b>"} 
        ) do %>
		<div class="plus voted"></div>
    <% end %>
  <% else %>
    <%= link_to(follow_show_path(show),
        :remote => true, 
        :class => 'pop-button', 
        :data => {:toggle=>"popover", :trigger => 'hover', :placement => 'left', :html => true,  :content => "Click to follow <b>'#{show.title}!'</b>"} 
        ) do %>
		<div class="plus"></div>
    <%end%>
  <% end %>
<% end %>
</div>