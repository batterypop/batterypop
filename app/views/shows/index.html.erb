<div class="main channel">
  <div class="container">
    <div class="content">



<%= render partial: "layouts/breadcrumb", :locals => {
        :crumb_title => "<h3>Our<br />Shows</h3>".html_safe, 
        :crumb_text => "<h4>Show Description</h4> <p>All the shows fit to watch.</p>".html_safe } %>




<!-- lower listings -->
      <div class="row show-bottom-section">

        <div class="col-lg-8 show-lower-left">
          
          <div class="media-list list-group">
            <% @shows.each do |show| %>
               <%= render partial: "layouts/horizontal_slide", :locals => {
                          :slide_badge => '23,333',
                          :slide_title => show.title, 
                          :slide_text => show.description.html_safe, 
                          :slide_image => image_tag(show.image(:thumbnail), :alt => show.title, :class => "img-responsive thumbnail media-object pull-left show-episode-image", :width => '125'), 
                          :slide_url => show_path(Show.friendly.find(show.id))
                          } %>
                      <% end %>
          </div>
        </div>

        <div class="col-lg-4 show-lower-right">
        </div>
      </div>

<!-- end lower listings -->




    </div>
  </div>
</div>







