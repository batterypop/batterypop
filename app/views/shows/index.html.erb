<section class="wrapper">

<% pos = 0 %>


<!-- page header; break off? -->
  <div class="row clearfix">
    <div class="col-md-12">

      <div class="banner theme-blue">
          <div class="well well-frame">
            <h3>Shows</h3>
            <p>The best web series around! Catch the shows everyone is talking about right here, and share your favorites with your friends.</p>
          </div>
      </div>

    </div>
  </div>

  <!-- page header end; break off? -->

  <div class="row">
    <%= will_paginate @shows %>
  </div>

  <% @shows.each do |show| %>
  <%  
    if(pos >= (colors.count-1)) 
      pos =0 
    else
      pos = pos + 1
    end
  %>


  <div class="row clearfix">
    <div class="col-lg-12 column">
      <div class="panel-split panel-frame panel panel-<%= colors[pos] %> clearfix">

        <div class="row clearfix">
          <div class="col-md-5 column">
            <div class="well clearfix">
              <a href="#">
                <div class="thumb"><%= image_tag(show.image(:thumb), :alt => show.title, :class => "img-responsive thumbnail media-object show-episode-image", :width => '160') %></div>
                <div class="summary">
                  <h2><%= "#{show.title}" %></h2>
                  <h5><%= show.description.html_safe %></p>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-7 column">
            <div class="carousel carousel-horizontal theme-purple theme-invert">
              <ul>
              <% show.episodes.find_each do |episode| %>
                <li>
                  <a href="#">
                    <div class="thumb"><img alt="" src="http://lorempixel.com/200/200/abstract/1"></div>
                    <div class="summary">
                      <h4>Some Kind of Headline</h4>
                      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magnam, omnis quasi totam sed sint error nobis facilis rerum cumque ducimus sed sint error nobis facilis rerum cumque ducimus. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magnam, omnis quasi totam sed sint error nobis. </p>
                    </div>
                  </a>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
          <!-- carousel -->
        </div>
        <!-- panel -->
      </div>
      <!-- row -->
    </div>
  <!-- col -->
  </div>
  <!-- row -->

<!-- end lower listings -->
<% end %>

<div class="row">
  <%= will_paginate @shows %>
</div>



</section>