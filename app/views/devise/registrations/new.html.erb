<div class="container">
	<div class="modal-dialog rounded">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title">Sign Up!</h1>
			</div>

			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

			<div class="modal-body">
				<div class="row"><!-- row 1 -->
					<div class="col-lg-6" >
						<%= f.label "Pick a User Name:" %><br />
						<%= f.email_field :username, :class =>"form-control", :placeholder => "Pick A Username!", :autofocus => true, "data-toggle" => "popover",  "data-content" => "We know you already have a name, but here's your chance to pick how you'll be known on the site! You can be named 'CaptainCool' or 'sunshine'; as long as no one has that username already...",  "data-original-title" => "Your user name:" %>
					</div>




					<div class="col-lg-6">
						<%= f.label "Enter Your Email:" %><br />
						<%= f.email_field :email, :class =>"form-control", :placeholder => "Enter Your Email!"  %>
					</div>
				</div>

				<div class="row"><!-- row 2 -->
					<div class="col-lg-6">
						<%= f.label :password %><br />
						<%= f.password_field :password, :class =>"form-control", :placeholder => "Enter A Password..."  %>
					</div>

					<div class="col-lg-6">
						<%= f.label :password_confirmation %><br />
						<%= f.password_field :password_confirmation, :class =>"form-control", :placeholder => "Enter Password Again"  %>
					</div>
				</div>

				<div class="row"><!-- row 3 -->
					<div class="col-lg-6">
						<%= f.label "First Name:" %><br />
						<%= f.email_field :firstname, :class =>"form-control", :placeholder => "What's your first name?"  %>
					</div>

					<div class="col-lg-6">
						<%= f.label "Last Name:"%><br />
						<%= f.email_field :lastname, :class =>"form-control", :placeholder => "What's your last name?"   %>
					</div>
				</div>

				<div class="row"> <!-- row 4 -->
					<div class="col-lg-8 col-offset-1">
						<%= f.label :birthday %><br />
						<%= f.date_select :birthday, 
									:prompt => { :day => 'Select day', :month => 'Select month', 
									:year => 'Select year' }, :date_separator => '/', 
									:order => [:month, :day, :year], :start_year => Time.now.year, 
									:end_year => Time.now.year-80  %>
					</div>
				</div>

				<!-- <div class="row">
					<%= f.label :gender %><br />
					<%= radio_button_tag(:gender, "male") %>
					<%= label_tag(:gender_male, "I am a boy") %>
					<%= radio_button_tag(:gender, "female") %>
					<%= label_tag(:gender_female, "I am a girl") %>
				</div>	 -->	
				
				<div class="row">
					<div class="col-lg-6">
						<div class="input-group">
							<span class="input-group-addon">
								<%= radio_button_tag(:gender, "male") %>
							</span>
							<span class="form-control">I am a Boy!</span>
						</div><!-- /input-group -->
					</div><!-- /.col-lg-6 -->
					<div class="col-lg-6">
						<div class="input-group">
							<span class="input-group-addon">
								<%= radio_button_tag(:gender, "female") %>
							</span>
							<span type="text" class="form-control">I am a Girl!</span>
						</div><!-- /input-group -->
						</div><!-- /.col-lg-6 -->
					</div><!-- /.row -->


			</div><!-- end modal body-->

			 <div class="modal-footer"> 
			 	<%= f.submit "Sign up", class: "btn btn-primary " %>
				<% end %>
				<div class="pull-left">
				 <%= render "devise/shared/links" %>
				 </div>
			 </div>
			
		</div>
	</div>

</div>