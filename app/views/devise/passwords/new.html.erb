<div class="main">
	<div class="container">
	    <div class="content">
	    	<div class="row">


<div class="modal-dialog rounded">
	<div class="modal-content">
		<div class="modal-header">
			 <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h3 class="h1 modal-title">Forgot your password?</h3>
		</div>

		<div class="modal-body">

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

		  	<div class="row"><!-- row 1 -->
				<div class="col-lg-12" >
			  		<%= f.label "Enter Your Username:" %><br />
		  			<%= f.text_field :username, :class =>"form-control" %>
				</div>
				<br />
				<div class="col-lg-12 control-group">
					<%= f.label "Select your Security Question:" %><br />
					<%= f.select  :security_question_id, ('<option value="">Please Select</option>' +options_from_collection_for_select(SecurityQuestion.all, :id, :name)).html_safe, {}, {:class =>"controls form-control"}  %>
				</div>
				<br />
				<div class="col-lg-12">
					<%= f.label "Enter your original answer:" %><br />
					<%= f.text_field :security_question_answer,  :placeholder => "Enter security answer.", :class =>"form-control" %>
				</div>
			</div>


		</div><!-- end modal body-->

		 <div class="modal-footer"> 
		 	<%= f.submit "Log In", class: "btn btn-primary " %>
			<% end %>
			
		 </div>
		
	</div>
</div>

				
			</div>
	    </div>
	</div>
</div>
 <!-- form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) -->