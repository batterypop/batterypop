<div class="main">
  <div class="container">
      <div class="content">
        <div class="row">
          <div class="col-md-3">
<%= render 'layouts/about_sidebar' %>
        </div>
          <div class="col-md-7">

<div class="modal-dialog rounded">
  <%= form_for :contact, html: {class: "form-horizontal", role: "form"} do |f| %>


<div class="form-group">
  <%= f.label :email, :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
  <%= f.text_field :email, :class =>"controls form-control", :placeholder => "Email" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :subject, :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :subject, :class =>"controls form-control", :placeholder => "Subject.." %>
  </div>
</div>

<div class="form-group">
  <%= f.label :message, :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_area :body, :class =>"form-control", :rows => "5" %>
  </div>
</div>

     
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Send Message", :class => "btn btn-primary" %>
  </div>
</div>



      </div>
  <% end %>
</div>

  </div>
      </div>  
  
  </div>
</div>

