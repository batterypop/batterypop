<!-- promo start -->
<div class="row bpop-promo">
	<!-- large image right slideshow -->
	<div class="col-lg-9 col-lg-push-3 col-md-8 col-md-push-4">
		<div class="home-featured-wrapper">
			<ul class="bxslider home-featured">
				<% @features.each do |feature| %>
					<li><%= feature.content.html_safe %></li>
				<% end %>

			</ul>
		</div>
	</div>
	<!-- end large image right slideshow -->
	

	
	<!-- begin vertical carousel -->	
	<div class="col-md-4 col-lg-3 col-lg-pull-9 col-md-pull-8 home-carousel">
		<div class="row home-carousel-prewrapper">
			<div class="home-carousel-wrapper">
				<div class="col-xs-12 home-carousel-header">
					<div class="home-carousel-controls">
						<div id="home-carousel-down" class="slider-down pull-right"></div>
						<div id="home-carousel-up" class="slider-up pull-left"></div>
					</div>
				</div>
				<div class="col-xs-12 fill padding margin right">
					<ul class="bxslider home-side-carousel">
						<% @shows.each do |show| %>
						<li>
							<%= render partial: "layouts/horizontal_slide", :locals => {
										:slide_title => show.title, 
									 	:slide_text => show.subtitle, 
										:slide_image => image_tag(show.image(:thumb), :alt => show.title, :class => "img-responsive thumbnail media-object pull-left show-episode-image", :width => '80', :height => '80'), 
										:slide_url => show_path(Show.friendly.find(show.id))} %>

						</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!-- end of vertical carousel -->
</div>
<!-- end show promo -->