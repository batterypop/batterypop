<header class="container shadow-bottom-left">
	<div class="shadow-bottom-right"></div>
	<div class="row fill bottom top padding margin shadow-container  hidden-xs">
		<div class="shadow-mid-left"></div>
		<div class="shadow-mid-right"></div>

		<div class="col-sm-3 col-md-3" data-toggle="modal" data-target="#modal_legend">
