					<h4><span class="inline-hide">Click </span><span style="" class="pop-button"><div class="flash"></div></span><span class="inline-hide"> to </span>POP it!</h4>
					<h4><span class="inline-hide">Click </span><span class="pop-button"><div class="plus"></div></span><span class="inline-hide"> to </span>CHARGE it!</h4>				
				</div>
			<!-- </div> -->
		</div>


		 <div class="col-sm-4 col-sm-offset-5 col-md-3 col-md-offset-6 col-xs-12 col-xs-offset-0 clearfix fill bottom padding margin" style="z-index:1;">
			<div class="btn-login-group">
				<% if user_signed_in? %>
				<!-- this should be replaced with profile controls -->
				<div class="col-xs-6 col-md-6" id="signin">
					<%= link_to "Log Out", destroy_user_session_path, :method => :delete, :id => "destroy", :class => "btn btn-primary btn-small btn-login" %>
					</div>
					<div class="col-xs-6 col-md-6" id="signup">
					<%= link_to "Profile", user_path(User.friendly.find(current_user.id)), :id => "login", :class => "btn btn-primary btn-small btn-login" %>
					</div>
				<!-- end profile controls -->
				<% else %>

				<!-- sign in / sign up buttons -->
					<div class="col-xs-6 col-md-6" id="signin">
						<button type="button" id="popover_login" class="btn btn-primary btn-small btn-login" data-toggle="modal" data-target="#modal_signin">Sign In</button>
					</div>
					

					<div class="col-xs-6 col-md-6" id="signup">
						<button type="button" class="btn btn-primary btn-small btn-login" id="signup" data-toggle="modal" data-target="#modal_signup">Sign Up</button>
					</div>
				 <!-- end sign in / sign up buttons -->
				<% end %>
			</div>
			<div class="clear"></div>
			<div class="row fill top bottom padding margin">
	            <div class="col-xs-12 col-md-12 fill top bottom padding" id="search">
