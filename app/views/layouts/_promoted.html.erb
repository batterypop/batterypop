<div class="row bpop-slider-header">
	<div class="col-lg-12 text-center home-promoted-header">
		<div id="home-promoted-next" class="slider-next pull-right"></div>
		<div id="home-promoted-prev" class="slider-prev pull-left"></div>
		<h4>Promoted</h4>
	</div>
</div>
<div class="row bpop-slider">
	<div class="col-lg-12">
		<ul class="bxslider home-promoted">
				<% @shows.each do |show| %>
					<li>
					  <%= render partial: "layouts/vertical_slide", :locals => {
					  	:slide_title => show.title, 
					  	:slide_text => truncate_html(strip_tags(show.description), length: 100, omission: '<b>...(more)</b>'), 
					  	:slide_image => show.image(:thumb), 
					  	:slide_url => show_path(Show.friendly.find(show.id))} %>
					</li>
				<% end %>
		</ul>
  </div>
</div>