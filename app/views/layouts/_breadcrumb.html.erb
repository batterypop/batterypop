<!-- top most / breadcrumb area -->
<div class="row bpop-breadcrumb slight-shadow">
	<div class="col-md-3 col-xs-9 bpop-show-title text-right">
		
			<%= crumb_title %>
		
	</div> 
	<div class="col-md-6 hidden-xs hidden-sm bpop-show-description">
		<div>
			<%= crumb_text %>
		</div>
	</div>
	<div class="col-xs-3 bpop-show-action">
		<div>
			<% if !(local_assigns[:crumb_action].nil?) %><%= crumb_action %><% end %>
		</div>
	</div>
</div>
<!-- end top most / breadcrumb area -->
