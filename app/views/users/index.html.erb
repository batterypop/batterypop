<div class="main users">
  <div class="container">
    <div class="content">

<% @groups.each do |group| %>

	<div class="row">

	<% group.each do |user| %>

	<% unless(user.avatar.nil?) 
		@img = image_tag(user.avatar.image(:thumb),  :class => "img-responsive thumbnail media-object pull-left user-image", :width => '94', :height => '124' )
	else
		@img = image_tag("missing.png", :class => "img-responsive thumbnail media-object pull-left user-image", :width => '94', :height => '124')
	end %>

		<div class="col-lg-3 col-md-4 all-users-user">

			<%= render partial: "layouts/horizontal_slide", :locals => {
				:slide_title => user.username, 
				:slide_text =>  "<b>Following:</b><br />\ 
								#{pluralize(user.following_by_type('User').count, 'user')}   |   #{pluralize(user.following_by_type('Show').count, 'show')}
								<br />
								 Has #{ pluralize( user.followers.count, 'follower')} 
								 <br />
								 <b>Likes:</b> #{pluralize(user.find_liked_items.count, 'video')}".html_safe, 
				:slide_image => @img,
				:slide_url => user_path(User.friendly.find(user.id))} %>


		</div>

	<% end %>

	</div>

<% end %>



		</div>
	</div>
</div>