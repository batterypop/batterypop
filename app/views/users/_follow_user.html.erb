<div class='button-follow follow_user-<%= user.id %>'>

	<% if (current_user.nil?) || (current_user == user) %>
	    <a class='btn btn-navy' data-toggle="modal" data-target="#become_member"  href='#'>
	        <h5>FOLLOW</h5>
	    </a>
	<% else %>
		
		<% if current_user.following?(user) %> 
			<%= link_to(unfollow_user_path(user), 
			    :remote => true, 
			    :class => 'btn btn-navy', 
			    :data => {:toggle=>"popover", :trigger => 'hover', :placement => 'left', :html => true,  :content => "Click to stop following <b>'#{user.username}!'</b>"} 
			    ) do %>
				<h5>UN-FOLLOW</h5>
			<% end %>
		<% else %>
			<%= link_to(follow_user_path(user),
			    :remote => true, 
			    :class => 'btn btn-navy', 
			    :data => {:toggle=>"popover", :trigger => 'hover', :placement => 'left', :html => true,  :content => "Click to follow <b>'#{user.username}!'</b>"} 
			    ) do %>
				<h5>FOLLOW</h5>
			<%end%>
		<% end %>
		

	<% end %>
</div>