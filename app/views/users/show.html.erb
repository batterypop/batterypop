      <div class="row fill top bottom padding">
        <div class="user-video-slider yellow">
            <div class="bpop-slider-header ">
              <div class="text-center user-header ">
                <div id="users-video-next" class="col-xs-1  slider-next pull-right"></div>
                <div id="users-video-prev" class="col-xs-1 slider-prev pull-left"></div>
                <h4 class="page-title hidden-xs">Videos<%= (current_user == @user) ? " You Popped" : " #{@user.username} Popped" %></h4> 
                <h5 class="page-title visible-xs">Videos<%= (current_user == @user) ? " You Popped" : " #{@user.username} Popped" %></h5> 
              </div>
            </div>

<% if(@user.votes.up.votables.empty?) %>
            <div class="col-xs-12 text-center">
            <h4 class="page-title empty-result"><%= (current_user == @user) ? "You haven't liked any yet; go watch some videos!" : " #{@user.username}  hasn't liked any videos yet.." %></h4>
            </div>
<% else %>


            <div class="bpop-slider">
