<!-- home items inited -->
<script type="text/javascript">
  $(document).ready(function(){
  
    args = {
      minSlides: 2,
      maxSlides: 5,
      slideWidth: 220,
      responsive: true,
      infiniteLoop: false,
      // hideControlOnEnd: true,
      touchEnabled: true,
      slideMargin: 6,
      pager: false
    };

    a = $.extend({}, {nextSelector: '#users-shows-next', prevSelector: '#users-shows-prev'}, args);
    $('#users-shows-slider').bxSlider(a);

    b = $.extend({}, {nextSelector: '#users-video-next', prevSelector: '#users-video-prev'}, args);
    $('#user-video-slider').bxSlider(b);

    c = $.extend({}, {nextSelector: '#users-followed-next', prevSelector: '#users-followed-prev'}, args);
    $('#users-followed-slider').bxSlider(c);

    d = $.extend({}, {nextSelector: '#users-following-next', prevSelector: '#users-following-prev'}, args);
    $('#users-following-slider').bxSlider(d);

  });
</script>
